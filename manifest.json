{
  "manifest_version": 3,
  "name": "Auto Refresh and Add to Cart",
  "version": "1.1.5",
  "description": "Automatycznie odświeża strone co 2s oraz dodaje produkt do koszyka, jeśli wybrany wcześniej rozmiar jest dostępny",
  "permissions": [
    "notifications",
    "activeTab",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": ["*://zalando-lounge.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/32.png",
      "48": "images/64.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/32.png",
    "48": "images/64.png",
    "128": "images/128.png"
  }
}
